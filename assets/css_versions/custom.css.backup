/* ============================================================
   CABLEGNOSIS – CLEAN UI BASELINE (DEBUG VERSION)
   ============================================================ */

body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
}

/* ============================================================
   TAB ORCHESTRATOR HEADER
   ============================================================ */

.tab-header-row {
    display: flex;
    align-items: center;
    gap: 24px;
    padding: 4px 16px;
    background: #f5f8fb;
    border-bottom: 1px solid #cfd8e3;
}

.tab-view-mode {
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 240px;
}

.tab-view-mode em {
    font-size: 12px;
    color: #6f6f6f;
}

.orchestrator-separator {
    height: 1px;
    background: #bdbdbd;
}

/* Compact dropdown */
.tab-view-mode .Select-control {
    min-height: 28px !important;
    height: 28px !important;
    font-size: 14px;
}

/* Centered mode info */
.contextual-info {
    flex: 1;
    text-align: center;
    font-size: 14px;
    color: #5a5a5a;
}

/* ============================================================
   DEBUG LINE – SHOULD BE VISIBLE NO MATTER WHAT
   ============================================================ */

.debug-line {
    height: 4px;
    background: red;
    margin: 20px 0;
}

/* ============================================================
   PRIMARY TAB BAR (WORK PACKAGES)
   ============================================================ */

.wp-tab-bar {
    display: flex;
    overflow-x: auto;
    background: #ffffff;
    border-bottom: 3px solid rgba(33, 150, 243, 0.35);
}

.wp-tab-bar .tab-btn {
    flex: 0 0 280px;
    padding: 10px 14px;
    font-size: 16px;
    background: #fafafa;
    border-right: 1px solid #ddd;
}

.wp-tab-bar .tab-btn.active {
    background: #d0e3ff;
    font-weight: bold;
    border-bottom: 3px solid #003366;
}

/* ============================================================
   SECONDARY TAB BAR (TOOLS)
   ============================================================ */

.tool-tab-bar {
    display: flex;
    overflow-x: auto;
    background: rgba(33, 150, 243, 0.08);
    border-top: 1px solid rgba(33, 150, 243, 0.35);
    border-bottom: 1px solid rgba(33, 150, 243, 0.2);
}

.tool-tab-bar .tab-btn {
    flex: 0 0 200px;
    padding: 6px 12px;
    font-size: 14px;
    background: transparent;
    border: 1px solid rgba(33, 150, 243, 0.25);
    border-radius: 6px;
    margin: 4px 6px;
}

.tool-tab-bar .tab-btn.active {
    background: #e6eef7;
    border-color: #4a78c2;
    font-weight: 600;
}

/* ============================================================
   CONTENT SEPARATOR (UNDER TOOLS)
   ============================================================ */

.content-separator {
    height: 1px;
    background: #d0d0d0;
    margin-bottom: 12px;
}
